<h2 class="center">Course Data for <%= course.title %></h2>
<table class="table">
    <tbody>
            <tr>
                <td>Title</td>
                <td>
                    <%= course.title %>
                </td>
            </tr>
            <tr>
                <td>Description</td>
                <td>
                    <%= course.description %>
                </td>
            </tr>
            <tr>
                <td>Max Students</td>
                <td>
                    <%= course.maxStudents %>
                </td>
            </tr>
            <tr>
                <td>Cost</td>
                <td>
                    <%= course.cost %>
                </td>
            </tr>
    </tbody>
</table>


<a href="<%=`/courses/${course._id}/edit` %>">
    <span class="button">Edit</span>
</a>
<a href="/courses">
    <span class="button">Back to the list</span>
</a>